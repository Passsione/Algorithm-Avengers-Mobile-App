<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".PartnerProfileActivity">

    <!-- Toolbar -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerView4"
        tools:layout_conversion_absoluteHeight="731dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                android:orientation="vertical"
                android:padding="16dp"
                tools:layout_conversion_absoluteHeight="217dp"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="411dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/img_tutor_profile"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@mipmap/ic_launcher_round" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_tutor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr. John Smith"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical">

                            <RatingBar
                                android:id="@+id/rating_tutor"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="4.5" />

                            <TextView
                                android:id="@+id/tv_rating_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="4.5 (87 reviews)" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_tutor_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ph.D. in Applied Mathematics"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Availability (AI)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Available weekdays from 4PM to 9PM and weekends from 10AM to 6PM"
                                android:layout_marginBottom="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Content Section -->


            <!-- About Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                tools:layout_conversion_absoluteHeight="231dp"
                tools:layout_editor_absoluteY="233dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_conversion_absoluteWidth="379dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="249dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_conversion_absoluteWidth="347dp" />

                <TextView
                    android:id="@+id/tv_tutor_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. John Smith has over 10 years of experience teaching mathematics at university level. Specializing in calculus and differential equations, he has helped hundreds of students master complex mathematical concepts.\n\nWith a Ph.D. in Applied Mathematics from MIT and research experience in numerical methods, Dr. Smith brings both theoretical knowledge and practical applications to his tutoring sessions."
                    tools:layout_conversion_absoluteHeight="167dp"
                    tools:layout_editor_absoluteY="281dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_conversion_absoluteWidth="347dp" />

            </androidx.cardview.widget.CardView>

            <!-- Subjects Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                tools:layout_conversion_absoluteHeight="256dp"
                tools:layout_editor_absoluteY="480dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_conversion_absoluteWidth="379dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subjects"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="512dp"
                    tools:layout_editor_absoluteX="48dp"
                    tools:layout_conversion_absoluteWidth="315dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_subjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_conversion_absoluteHeight="160dp"
                    tools:layout_editor_absoluteY="544dp"
                    tools:layout_editor_absoluteX="48dp"
                    tools:layout_conversion_absoluteWidth="315dp">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculus"
                        tools:layout_conversion_absoluteHeight="48dp"
                        tools:layout_editor_absoluteY="544dp"
                        tools:layout_editor_absoluteX="48dp"
                        tools:layout_conversion_absoluteWidth="86dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Differential Equations"
                        tools:layout_conversion_absoluteHeight="48dp"
                        tools:layout_editor_absoluteY="544dp"
                        tools:layout_editor_absoluteX="142dp"
                        tools:layout_conversion_absoluteWidth="166dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Linear Algebra"
                        tools:layout_conversion_absoluteHeight="48dp"
                        tools:layout_editor_absoluteY="600dp"
                        tools:layout_editor_absoluteX="48dp"
                        tools:layout_conversion_absoluteWidth="122dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistics"
                        tools:layout_conversion_absoluteHeight="48dp"
                        tools:layout_editor_absoluteY="600dp"
                        tools:layout_editor_absoluteX="178dp"
                        tools:layout_conversion_absoluteWidth="91dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numerical Methods"
                        tools:layout_conversion_absoluteHeight="48dp"
                        tools:layout_editor_absoluteY="656dp"
                        tools:layout_editor_absoluteX="48dp"
                        tools:layout_conversion_absoluteWidth="154dp" />
                </com.google.android.material.chip.ChipGroup>


            </androidx.cardview.widget.CardView>

            <!-- Education Section -->

            <!-- Reviews Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                tools:layout_conversion_absoluteHeight="236dp"
                tools:layout_editor_absoluteY="752dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_conversion_absoluteWidth="379dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="768dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_conversion_absoluteWidth="304dp" />

                <TextView
                    android:id="@+id/tv_see_all_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textColor="@color/primary"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_editor_absoluteY="770dp"
                    tools:layout_editor_absoluteX="336dp"
                    tools:layout_conversion_absoluteWidth="43dp" />


                <!-- Review Item 1 -->


                <!--
                                                                    <de.hdodenhof.circleimageview.CircleImageView
                                                                        android:layout_width="32dp"
                                                                        android:layout_height="32dp"
                                                                        android:src="@drawable/avatar_default"
                                                                        android:layout_marginEnd="8dp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sarah Johnson"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_editor_absoluteY="808dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_conversion_absoluteWidth="267dp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    tools:layout_conversion_absoluteHeight="16dp"
                    tools:layout_editor_absoluteY="809dp"
                    tools:layout_editor_absoluteX="299dp"
                    tools:layout_conversion_absoluteWidth="80dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Smith is an exceptional tutor who made calculus understandable for me. His step-by-step approach and patience helped me improve my grade significantly."
                    tools:layout_conversion_absoluteHeight="52dp"
                    tools:layout_editor_absoluteY="831dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_conversion_absoluteWidth="347dp" />


                <!-- Review Item 2 -->


                <!--
                                                                    <de.hdodenhof.circleimageview.CircleImageView
                                                                        android:layout_width="32dp"
                                                                        android:layout_height="32dp"
                                                                        android:src="@drawable/avatar_default"
                                                                        android:layout_marginEnd="8dp" />
                                    -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Michael Chen"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_editor_absoluteY="896dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_conversion_absoluteWidth="267dp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    tools:layout_conversion_absoluteHeight="16dp"
                    tools:layout_editor_absoluteY="897dp"
                    tools:layout_editor_absoluteX="299dp"
                    tools:layout_conversion_absoluteWidth="80dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I was struggling with differential equations until I started sessions with Dr. Smith. He has a knack for explaining complex concepts in simple terms."
                    tools:layout_conversion_absoluteHeight="52dp"
                    tools:layout_editor_absoluteY="919dp"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_conversion_absoluteWidth="347dp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView4"
        android:name="com.pbdvmobile.app.fragments.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="411dp" />

</androidx.constraintlayout.widget.ConstraintLayout>