<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourceUploadActivity"
    android:fillViewport="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="24dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="upload resource"
          android:textSize="24sp"
          android:textStyle="bold"
          android:gravity="start"/>

    </LinearLayout>

    <!-- Resource Title -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Resource display name"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/resourceTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Subject Dropdown -->


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Select a subject"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary">
        <Spinner
          android:id="@+id/subjectDropdown"
          android:layout_width="match_parent"
          android:layout_height="50dp"

          android:importantForAccessibility="yes"
          android:layout_marginBottom="20dp"/>

    </com.google.android.material.textfield.TextInputLayout>



    <!-- File Upload Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/uploadCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="24dp"

        app:strokeColor="@color/primary"
        app:strokeWidth="1dp"
        app:cardElevation="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:padding="16dp">

        <Button
            android:id="@+id/selectPdfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tap to upload"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/upload_doc_name"
            android:layout_height="wrap_content"
            android:text="PDF's only"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Upload Button -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.google.android.material.button.MaterialButton
          android:id="@+id/uploadPdfButton"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:elevation="1dp"
          android:text="upload resource"
          app:backgroundTint="@color/primary"
          app:cornerRadius="8dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <com.google.android.material.button.MaterialButton
          android:id="@+id/upload_cancel_button"
          android:layout_width="wrap_content"
          android:layout_height="48dp"
          android:layout_marginStart="132dp"
          android:layout_marginTop="8dp"
          android:elevation="1dp"
          android:text="Cancel"
          app:backgroundTint="@color/primary"
          app:cornerRadius="8dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/uploadPdfButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </LinearLayout>
</ScrollView>

