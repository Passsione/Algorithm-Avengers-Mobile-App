<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main_ai"
    tools:context=".AIBaseActivity">

    <Button
        android:id="@+id/buttonSelectPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select PDF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewSelectedPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No PDF selected"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/buttonSelectPdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonProcessPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Summarize &amp; Generate Quiz"
        android:layout_marginTop="16dp"
        android:enabled="false"
    app:layout_constraintTop_toBottomOf="@id/textViewSelectedPdf"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
    <!--/* Initially disabled until a PDF is selected */-->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/buttonProcessPdf"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
    <!--/* Hidden by default */-->
    <ScrollView
        android:id="@+id/scrollViewResults"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSummaryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text=""
                android:visibility="gone"
                tools:text="This is where the generated summary of the PDF will appear." />

            <TextView
                android:id="@+id/textViewQuizLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:visibility="gone"
                tools:text="1. What is the main topic?\n2. Question two...\n3. Question three..." />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

